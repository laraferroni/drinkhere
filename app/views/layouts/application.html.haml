<!DOCTYPE html>
%html
%head
  %title Drink Here
  = stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true
  = stylesheet_link_tag "//fonts.googleapis.com/css?family=Open+Sans", media: "all"
  = javascript_include_tag 'application', 'data-turbolinks-track' => true
  = csrf_meta_tags
  
%body.frost

%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"data-toggle"=>"collapse", "data-target"=>"#dh-menu"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      -if current_user  
        %a.navbar-brand{:href=>"#"}
          %span
            %img{:src=>asset_url("drinkhere.png"), :height=>"35px;"}
            Drink Here
    .collapse.navbar-collapse#dh-menu
      %ul.nav.navbar-nav.navbar-right
        -if current_user
          -if current_user.is_approver
            %li
              =link_to "Pending ", "/queue"
          %li
            =link_to "Hi, "+current_user.first_name, destroy_user_session_path, :method => :delete
          
            -@user_achievements.each do |a|
              %img{:src=>a.icon.url(:thumb), :height=>"20px;", :title=>a.name}
        -else
          %li
            %a{:href=>"/users/sign_in"}
              Log In
          %li
            %a{:href=>"#"}
              Join

.center{:style=>"margin: auto; width: 100%;"}
    
  = yield

%p.notice
  =notice
%p.alert
  =alert
